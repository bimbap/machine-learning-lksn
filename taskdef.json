{
  "family": "techmart-ecs",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::862529903840:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::862529903840:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "techmart-container",
      "image": "862529903840.dkr.ecr.us-east-1.amazonaws.com/technoml:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/techmart-ecs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "5000"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "cpu": 512,
      "memory": 1024,
      "memoryReservation": 512
    }
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "techmart"
    },
    {
      "key": "Cluster",
      "value": "technomlecs"
    }
  ]
}